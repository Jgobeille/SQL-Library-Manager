extends ../layout


block content
    h1 Books
    h2=search
    .buttons-container
        a.button(href='/books/new') Create New Book
        include search-bar
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
        each book in books.rows
            tr
                td
                    a(href='/books/' + book.id )= book.title
                td= book.author 
                td= book.genre
                td= book.year
    if search
        p
            a.button(href='/books/?page=1') Back
    else
        include pagination
